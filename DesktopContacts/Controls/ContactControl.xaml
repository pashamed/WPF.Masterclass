<UserControl x:Class="DesktopContacts.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopContacts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid  Background="LightGray">
        <StackPanel>
            <TextBlock Text="Name Lastname" 
                       x:Name="nameTextBlock"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock Text="email@mail.com"
                       x:Name="emailTextBlock"
                       FontSize="20"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="2342342534"
                       x:Name="phoneTextBlock"
                       FontSize="16"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
